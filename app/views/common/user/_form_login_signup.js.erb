$(document).ready(function(){
  $('.boxmodal').click(function(){
    $('.dklogin').show();
    $('.clickdn').css('background', '#29d4009c');
  });

  $('.clickdk').click(function(){
    $('.loginn').hide();
    $('.signup').show();
    $('.clickdk').css('background', '#29d4009c');
    $('.clickdn').css('background', '#7ed0dcb3');
  });

  $('.clickdn').click(function(){
    $('.signup').hide();
    $('.loginn').show();
    $('.clickdn').css('background', '#29d4009c');
    $('.clickdk').css('background', '#7ed0dcb3');
  });

  $('.x').click(function(){
    $('.dklogin').hide();
  });

  $('.dk').click(function(){
    $('.loginn').hide();
    $('.signup').show();
    $('.clickdk').css('background', '#29d4009c');
    $('.clickdn').css('background', '#7ed0dcb3');
  });

});
