<!-- tao Modal Box Dang ky Dang Nhap -->
  <div class="container background">
    <div class="modalbox dklogin">
      <button class="clickdk"><%= t ".registration" %></button>
      <button class="clickdn"><%= t ".login" %></button>
      <a href="#" class="x">X</a>
      <!-- div Dang Ky -->
      <div class="signup">
        <%= form_for :user, url: users_path, method: :POST do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>

          <%= f.label :phone %>
          <%= f.phone_field :phone, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>

          <%= f.submit "add user", class: "btn btn-primary" %>
        <% end %>


      </div>
      <!-- end div Dang Ky -->

      <div class="loginn">
        <%= form_for :session, url: sessions_path, method: :POST do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.submit t("users.log_in"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- end Modal Box -->

<script type="text/javascript">
  <%= render "common/user/form_login_signup.js" %>
</script>
